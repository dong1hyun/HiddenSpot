generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  nickName String
  interests String[]
  places Place[]
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  favorites Favorite[]
  likes Like[]
}

model Place {
  id Int @id @default(autoincrement())
  title String
  description String
  address String
  photoUrl String
  latitude Float
  longitude Float
  nickName String
  userEmail String
  tags String[]
  user       User     @relation(fields: [userEmail], references: [email])
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  favoritedBy Favorite[]
  likedBy Like[]
}

model Favorite {
  id      Int   @id @default(autoincrement())
  userEmail String
  placeId Int
  user    User  @relation(fields: [userEmail], references: [email])
  place   Place @relation(fields: [placeId], references: [id])

  @@unique([userEmail, placeId])
}

model Like {
  id      Int   @id @default(autoincrement())
  userEmail String
  placeId Int
  user    User  @relation(fields: [userEmail], references: [email])
  place   Place @relation(fields: [placeId], references: [id])

  @@unique([userEmail, placeId])
}